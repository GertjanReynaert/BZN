<div class="form-horizontal" role="form">
  <div class="form-group">
    <label for="inputDate" class="col-lg-3 control-label">Datum</label>
    <div class="col-lg-9">
      {{input type="date" class="form-control" id="inputDate" value=date}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputType" class="col-lg-3 control-label">Cash/Overschrijving</label>
    <div class="col-lg-9">
      {{input class="form-control" id="inputType" value=kind
      placeholder="switch-component needed"}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPrice" class="col-lg-3 control-label">Bedrag</label>
    <div class="col-lg-9">
      <div class="input-group">
        <span class="input-group-addon">&euro;</span>
        {{input type="number" class="form-control" id="inputPrice" value=price}}
      </div>
    </div>
  </div>

  <button class="btn btn-primary pull-right" {{action "save"}}>Opslaan</button>
{{link-to "Annuleer" "articles.index" tagName="button" class="btn btn-link
pull-right"}}

</div>
