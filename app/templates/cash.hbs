        <tbody>
          <tr>
            <td>1234</td>
            <td>Wenskaars</td>
            <td>&euro; 10,50</td>
            <td>3</td>
            <td>&euro; 31,50</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-4">
    {{link-to "Nieuwe betaling" "cash.new" tagName="button" class="btn btn-primary btn-block"}}

    <div class="content">
      {{outlet}}
    </div>
  </div>
</div>
