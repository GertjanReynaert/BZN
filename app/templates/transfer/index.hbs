<section>
  <div class="col-lg-10">
    <div class="well">
      <p>Van:</p>
      <p>Reynaert - Rogge</p>
      <p>Naar:</p>
      <p>Rogge</p>
      <p>Datum:</p>
      <p>17.10.2014</p>
    </div>
    <div class="panel panel-default">
      <table class="table table-hover">
        <thead>
          <td>Artikelnummer</td>
          <td>Artikelnaam</td>
          <td>Prijs</td>
          <td>Aantal</td>
        </thead>
        <tbody>
          {{#each article in model}}
          {{#link-to 'articles.edit' article tagName='tr'}}
          <td>{{article.code}}</td>
          <td>{{article.name}}</td>
          <td>{{article.displayPrice}}</td>
          <td>999</td>
          {{/link-to}}
          {{else}}
          <tr>
            <td colspan="4">No articles found</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-lg-2">
    <div class="list-group">
      {{link-to "17.10.2012" 'transfer' class="list-group-item"}}
      <a class="list-group-item">17.10.2012</a>
      <a class="list-group-item">4.03.2013</a>
      <a class="list-group-item list-group-item-success">Toevoegen</a>
    </div>
  </div>
</section>
