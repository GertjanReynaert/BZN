<div class="content">
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <td>Artikelnummer</td>
        <td>Artikelnaam</td>
        <td>Prijs</td>
        <td>Type</td>
      </thead>
      <tbody>
        {{#each article in model}}
          {{#link-to 'articles.edit' article tagName='tr'}}
            <td>{{article.code}}</td>
            <td>{{article.name}}</td>
            <td>{{article.displayPrice}}</td>
            <td>{{article.kind}}</td>
          {{/link-to}}
        {{else}}
          <tr>
            <td colspan="4">No articles found</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="col-md-4">
    {{outlet}}
  </div>
</div>
